{
    "$schema": "https://smapi.io/schemas/content-patcher.json",
    "Format": "2.5.0",
    "Changes": [
      // Load the spritesheet
      {
        "Action": "Load",
        "Target": "Assets/bh_dryingrack.png",
        "FromFile": "Assets/bh_dryingrack.png" // Replace with the path to your spritesheet
      },
      {
        // Add the Drying Rack as a new crafting recipe
        "Action": "EditData",
        "Target": "Data/CraftingRecipes",
        "Entries": {
          "Drying Rack": "390 10 388 20 335 1/s Foraging 4/true/Default" // 10 Wood, 20 Stone, 1 Copper Bar
        }
      },
      {
        // Define the Drying Rack as a big craftable
        "Action": "EditData",
        "Target": "Data/BigCraftables",
        "Entries": {
          "bonghits.DryingRack": {
            "Name": "Drying Rack",
            "Price": 1000,
            "Edibility": -300,
            "Type": "Crafting",
            "Category": -9,
            "Description": "Turns flowers into dried flowers over time. Can be placed on walls.",
            "Texture": "Assets/bh_dryingrack.png", // Reference the spritesheet
            "SpriteIndex": 0, // Use the first sprite in the spritesheet
            "Placement": "Wall" // Allows placement on walls
          }
        }
      },
      {
        // Define the Drying Rack's behavior
        "Action": "EditData",
        "Target": "Data/Machines",
        "TargetField": ["(BC)163", "OutputRules"], // Replace (BC)163 with the correct ID for the Drying Rack
        "Entries": {
          "bonghits.dryingrack": {
            "Triggers": [
              {
                "Id": "bonghits.dryingrackTrigger",
                "Trigger": "ItemPlacedInMachine",
                "RequiredItemId": "(O)591, (O)593, (O)595, (O)597, (O)376, (O)429, (O)593, (O)595, (O)597", // Input flowers
                "RequiredCount": "1" // Only 1 flower needed
              }
            ],
            "OutputItem": [
              {
                "Id": "bonghits.DriedFlower",
                "ItemId": "bonghits.DriedFlower",
                "CopyQuality": true // Quality is retained
              }
            ],
            "MinutesUntilReady": 6000 // 4 in-game days
          }
        }
      }
    ]
  }